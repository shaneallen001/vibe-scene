<form class="asset-library-window">
    <style>
        .asset-library-window {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .library-layout {
            display: flex;
            flex-direction: column;
            height: 100%;
            gap: 10px;
            overflow: hidden;
        }

        .preview-panel {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(0, 0, 0, 0.2);
            padding: 8px;
            border-radius: 5px;
            flex: 0 0 auto;
            max-height: 100px;
        }

        .preview-image-container {
            display: flex;
            gap: 15px;
            align-items: center;
            flex: 1;
            overflow: hidden;
        }

        .preview-image {
            height: 80px;
            width: 80px;
            object-fit: contain;
            border: 1px solid #333;
            background: #000;
            flex-shrink: 0;
        }

        .preview-details h3 {
            margin: 0 0 2px 0;
            font-size: 1.1em;
        }

        .preview-details p {
            margin: 0;
            font-size: 0.85em;
            color: #ccc;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .open-studio-btn {
            background: #2f5031;
            color: white;
            border: 1px solid #4a804d;
            padding: 6px 12px;
            cursor: pointer;
            flex: 0 0 auto;
            border-radius: 3px;
        }

        .open-studio-btn:hover {
            background: #4a804d;
        }

        .filter-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 5px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 3px;
            flex: 0 0 auto;
        }

        .active-filters {
            display: flex;
            gap: 5px;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter-chip {
            background: #444;
            padding: 2px 8px;
            border-radius: 10px;
            font-size: 0.8em;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .remove-filter {
            cursor: pointer;
            color: #aaa;
        }

        .remove-filter:hover {
            color: #ff6666;
        }

        .table-container {
            flex: 1;
            overflow-y: auto;
            border: 1px solid #333;
            background: rgba(0, 0, 0, 0.1);
        }

        .asset-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.9em;
        }

        .asset-table th {
            position: sticky;
            top: 0;
            background: #111;
            padding: 6px;
            text-align: left;
            border-bottom: 1px solid #444;
            cursor: pointer;
            z-index: 10;
            font-weight: 600;
            color: #eee;
        }

        .asset-table td {
            padding: 4px 6px;
            border-bottom: 1px solid #222;
            vertical-align: middle;
        }

        .asset-row:hover {
            background: rgba(255, 255, 255, 0.05);
        }

        .tag {
            background: #222;
            padding: 1px 4px;
            border-radius: 3px;
            font-size: 0.8em;
            margin-right: 2px;
            color: #aaa;
        }

        .row-actions {
            display: none;
            gap: 5px;
        }

        .asset-row:hover .row-actions {
            display: flex;
        }

        .icon-btn {
            background: none;
            border: none;
            cursor: pointer;
            opacity: 0.7;
            padding: 2px;
        }

        .icon-btn:hover {
            opacity: 1;
        }

        .green-text {
            color: #4CAF50;
        }

        .red-text {
            color: #F44336;
        }

        .pagination-controls {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px;
            background: rgba(0, 0, 0, 0.2);
            border-radius: 3px;
            flex: 0 0 auto;
        }

        .pagination-controls button {
            background: #2a2a2a;
            color: #eee;
            border: 1px solid #444;
            padding: 4px 10px;
            border-radius: 3px;
            cursor: pointer;
        }

        .pagination-controls button:hover:not(:disabled) {
            background: #444;
        }

        .pagination-controls button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .pagination-info {
            font-size: 0.9em;
            color: #aaa;
        }
    </style>
    <div class="library-layout">
        <!-- Preview Panel -->
        <div class="preview-panel">
            <div class="preview-image-container">
                {{#if previewAsset}}
                <img src="{{previewAsset.path}}" alt="{{previewAsset.name}}" class="preview-image" />
                <div class="preview-details">
                    <h3>{{previewAsset.name}}</h3>
                    <p><strong>Prompt:</strong> {{previewAsset.prompt}}</p>
                    <p><strong>Model:</strong> {{previewAsset.model}}</p>
                </div>
                {{else}}
                <div class="preview-placeholder">
                    <p>Hover over an asset to preview</p>
                </div>
                {{/if}}
            </div>

            <div class="action-buttons">
                <button type="button" class="open-studio-btn" title="Open Asset Studio">
                    <i class="fas fa-plus"></i> Open Studio
                </button>
            </div>
        </div>

        <!-- Filter Bar -->
        <div class="filter-bar">
            <div class="active-filters">
                {{#each activeFilters as |filter key|}}
                <span class="filter-chip" data-key="{{key}}">
                    {{key}}: {{filter}} <i class="fas fa-times remove-filter"></i>
                </span>
                {{/each}}
                {{#unless activeFilters}}
                <span class="no-filters">No active filters</span>
                {{/unless}}
            </div>
            <div class="column-picker-dropdown">
                <button type="button" class="icon-btn toggle-columns" title="Select Columns">
                    <i class="fas fa-columns"></i>
                </button>
            </div>
        </div>

        <!-- Data Table -->
        <div class="table-container">
            <table class="asset-table">
                <thead>
                    <tr>
                        <th data-sort="id">ID <i class="fas fa-filter filter-col" data-col="id"></i></th>
                        <th data-sort="name">Name <i class="fas fa-filter filter-col" data-col="name"></i></th>
                        <th data-sort="type">Type <i class="fas fa-filter filter-col" data-col="type"></i></th>
                        <th data-sort="width">Size <i class="fas fa-filter filter-col" data-col="width"></i></th>
                        <th data-sort="tags">Tags <i class="fas fa-filter filter-col" data-col="tags"></i></th>
                        <th class="actions-col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each assets}}
                    <tr class="asset-row" data-id="{{this.id}}">
                        <td>{{this.id}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.type}}</td>
                        <td>{{this.width}}x{{this.height}}</td>
                        <td>
                            {{#each this.tags}}
                            <span class="tag">{{this}}</span>
                            {{/each}}
                        </td>
                        <td class="row-actions">
                            <button type="button" class="icon-btn regenerate-asset" title="Regenerate"
                                data-id="{{this.id}}">
                                <i class="fas fa-sync-alt green-text"></i>
                            </button>
                            <button type="button" class="icon-btn delete-asset" title="Delete" data-id="{{this.id}}">
                                <i class="fas fa-trash red-text"></i>
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        {{#if pagination}}
        <div class="pagination-controls">
            <button type="button" class="page-prev" {{#unless pagination.hasPrev}}disabled{{/unless}}>
                <i class="fas fa-chevron-left"></i> Previous
            </button>
            <span class="pagination-info">
                Showing {{pagination.startIndex}}-{{pagination.endIndex}} of {{pagination.totalItems}} (Page {{pagination.currentPage}} of {{pagination.totalPages}})
            </span>
            <button type="button" class="page-next" {{#unless pagination.hasNext}}disabled{{/unless}}>
                Next <i class="fas fa-chevron-right"></i>
            </button>
        </div>
        {{/if}}
    </div>
</form>